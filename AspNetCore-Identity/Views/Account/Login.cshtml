@model Identity.Service.Application.Commands.User.AuthenticateUserCommand
@{
    ViewData["Title"] = "Login";
}

@section styles {
    <link href="~/css/layouts/page-center.css" type="text/css" rel="stylesheet">
}

@section scripts {
    <script type="text/javascript">
        $('#registeredAlert').addClass('animated fadeInUp');
    </script>
}

<div id="login-page" class="row">
    <div class="col s12 z-depth-4 card-panel">
        <form id="loginForm" class="login-form" asp-action="Login" method="post">
            <input type="hidden" asp-for="ReturnUrl" />
            <div class="row">
                <div class="input-field col s12 center">
                    <img src="~/images/logo/login-logo.png" alt="" class="circle responsive-img valign profile-image-login">
                    <p class="center login-form-text">Material Design Admin Template</p>
                </div>
            </div>
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="row" id="ErrorAlert">
                    <div class="input-field col s12 center">
                        <div id="card-alert" class="card red lighten-5">
                            <div class="card-content red-text">
                                <div class="center">
                                    @foreach (var modelState in ViewData.ModelState.Values)
                                    {
                                        foreach (ModelError error in modelState.Errors)
                                        {
                                            <p>@error.ErrorMessage</p>
                                        }
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
            <div class="row margin">
                <div class="input-field col s12">
                    <i class="material-icons prefix pt-5">person_outline</i>
                    <input asp-for="Username" type="text">
                    <label for="Username" class="center-align">Username</label>
                </div>
            </div>
            <div class="row margin">
                <div class="input-field col s12">
                    <i class="material-icons prefix pt-5">lock_outline</i>
                    <input asp-for="Password" type="password">
                    <label for="Password">Password</label>
                </div>
            </div>
            <div class="row">
                <div class="col s12 m12 l12 ml-2 mt-3">
                    <input type="checkbox" asp-for="RememberMe" />
                    <label for="RememberMe">Remember me</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <a onclick="javascript: document.getElementById('loginForm').submit()" class="btn waves-effect waves-light col s12">Login</a>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s6 m6 l6">
                    <p class="margin medium-small"><a asp-action="Register">Register Now!</a></p>
                </div>
                <div class="input-field col s6 m6 l6">
                    <p class="margin right-align medium-small"><a asp-action="Forgot">Forgot password ?</a></p>
                </div>
            </div>
        </form>
    </div>
</div>

