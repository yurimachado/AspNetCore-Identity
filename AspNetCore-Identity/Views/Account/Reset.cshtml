@model Identity.Service.Application.Commands.User.ResetPasswordCommand

@section styles {
    <link href="~/css/layouts/page-center.css" type="text/css" rel="stylesheet">
}

@section scripts {
    <script type="text/javascript">
        $('#ErrorAlert').addClass('animated fadeInUp');
    </script>
}

<div id="login-page" class="row">
    <div class="col s12 z-depth-4 card-panel">
        <form id="resetForm" class="login-form" method="post" asp-action="Reset">
            <input type="hidden" asp-for="Email" />
            <input type="hidden" asp-for="ResetPasswordToken" />

            <div class="row">
                <div class="input-field col s12 center">
                    <h4>Reset Password</h4>
                    <p class="center">You can reset your password</p>
                </div>
            </div>
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="row" id="ErrorAlert">
                    <div class="input-field col s12 center">
                        <div id="card-alert" class="card red lighten-5">
                            <div class="card-content red-text">
                                <div class="center">
                                    @foreach (var modelState in ViewData.ModelState.Values)
                                    {
                                        foreach (ModelError error in modelState.Errors)
                                        {
                                            <p>@error.ErrorMessage</p>
                                        }
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }

            <div class="row margin">
                <div class="input-field col s12">
                    <i class="material-icons prefix pt-5">lock_outline</i>
                    <input asp-for="NewPassword" type="password">
                    <label for="Password">Password</label>
                </div>
            </div>
            <div class="row margin">
                <div class="input-field col s12">
                    <i class="material-icons prefix pt-5">lock_outline</i>
                    <input asp-for="ConfirmNewPassword" type="password">
                    <label for="ConfirmPassword">Password again</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <a onclick="javascript: document.getElementById('resetForm').submit()" class="btn waves-effect waves-light col s12">Reset Password</a>
                </div>
                <div class="input-field col s12">
                    <p class="margin sign-up">
                        <a asp-action="Login">Login</a>
                        <a asp-action="Register" class="right">Register</a>
                    </p>
                </div>
            </div>
        </form>
    </div>
</div>

