@model Identity.Service.Application.Commands.User.RegisterUserCommand
@{
    ViewData["Title"] = "Registration";
}

@section styles {
    <link href="~/css/layouts/page-center.css" type="text/css" rel="stylesheet">
}

@section scripts {
    <script type="text/javascript">
        $('#registeredAlert').addClass('animated fadeInUp');
    </script>
}

<div id="login-page" class="row">
    <div class="col s12 z-depth-4 card-panel">
        <form id="registerForm" class="login-form" asp-action="Register" method="post">
            <div class="row">
                <div class="input-field col s12 center">
                    <h4>Register</h4>
                </div>
            </div>
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="row" id="ErrorAlert">
                    <div class="input-field col s12 center">
                        <div id="card-alert" class="card red lighten-5">
                            <div class="card-content red-text">
                                <div class="center">
                                    @foreach (var modelState in ViewData.ModelState.Values)
                                    {
                                        foreach (ModelError error in modelState.Errors)
                                        {
                                            <p>@error.ErrorMessage</p>
                                        }
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
            <div class="row margin">
                <div class="input-field col s12">
                    <i class="material-icons prefix pt-5">person_outline</i>
                    <input asp-for="Username" type="text">
                    <label for="Name" class="center-align">Username</label>
                </div>
            </div>
            <div class="row margin">
                <div class="input-field col s12">
                    <i class="material-icons prefix pt-5">email</i>
                    <input asp-for="Email" type="email">
                    <label for="Email" class="center-align">Email</label>
                </div>
            </div>
            <div class="row margin">
                <div class="input-field col s12">
                    <i class="material-icons prefix pt-5">lock_outline</i>
                    <input asp-for="Password" type="password">
                    <label for="Password">Password</label>
                </div>
            </div>
            <div class="row margin">
                <div class="input-field col s12">
                    <i class="material-icons prefix pt-5">lock_outline</i>
                    <input asp-for="ConfirmPassword" type="password">
                    <label for="ConfirmPassword">Password again</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <a onclick="javascript: document.getElementById('registerForm').submit()" class="btn waves-effect waves-light col s12">Register Now</a>
                </div>
                <div class="input-field col s12">
                    <p class="margin center medium-small sign-up">Already have an account? <a asp-action="Login">Login</a></p>
                </div>
            </div>
        </form>
    </div>
</div>