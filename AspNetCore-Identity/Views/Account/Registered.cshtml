@model Identity.Service.Application.Commands.User.ResendEmailConfirmationCommand

@section styles {
    <link href="~/css/layouts/page-center.css" type="text/css" rel="stylesheet">
}

@section scripts {
    <script type="text/javascript">
        $('#registeredAlert').addClass('animated fadeInUp');
    </script>
}
<div id="login-page" class="row">
    <div class="col s12 z-depth-4 card-panel">
        <form id="registeredForm" class="login-form" method="post" asp-action="ResendEmail">
            <input type="hidden" asp-for="@Model.Email" />
            <div class="row">
                <div class="input-field col s12 center">
                    <h4>Register</h4>
                </div>
            </div>
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="row" id="ErrorAlert">
                    <div class="input-field col s12 center">
                        <div id="card-alert" class="card red lighten-5">
                            <div class="card-content red-text">
                                <div class="center">
                                    @foreach (var modelState in ViewData.ModelState.Values)
                                    {
                                        foreach (ModelError error in modelState.Errors)
                                        {
                                            <p>@error.ErrorMessage</p>
                                        }
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
            <div class="row" id="registeredAlert">
                <div class="input-field col s12 center">
                    <div id="card-alert" class="card cyan lighten-5">
                        <div class="card-content">
                            <p class="center">You have successfully registered!</p>
                            <p class="center">We've sent a confirmation message to <b>@Model.Email</b>.</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <a onclick="javascript: document.getElementById('registeredForm').submit()" class="btn waves-effect waves-light col s12">Resend Email</a>
                </div>
                <div class="input-field col s12">
                    <p class="margin center medium-small sign-up">Already have an account? <a asp-action="Login">Login</a></p>
                </div>
            </div>
        </form>
    </div>
</div>